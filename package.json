{
  "name": "docs",
  "version": "1.0.0",
  "description": "Docs for Blazor Realm",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "preinstall:docfx": "rimraf docfx/*",
    "install:docfx": "nuget install docfx.console -Version 2.36.2 -OutputDirectory docfx",
    "postinstall:docfx": "copyfiles docfx/docfx.console*/**/* docfx -u 2 && rimraf docfx/docfx.console*",
    "install:all": "npm-run-all install:docfx",
    "clean:index": "rimraf index.md",
    "clean:obj": "rimraf obj/*",
    "clean:site": "rimraf _site",
    "clean:gh-pages": "rimraf ../gh-pages",
    "postclean:gh-pages": "git clone https://github.com/dworthen/BlazorRealm.git --branch gh-pages ../gh-pages && rimraf ../gh-pages/*",
    "clean:all": "npm-run-all clean:index clean:obj clean:site clean:gh-pages",
    "premove:readme": "npm run clean:index",
    "move:readme": "echo --- >> index.md && echo _disableAffix: true >> index.md && echo uid: index-page >> index.md && echo --- >> index.md && echo\\ >> index.md && cat ../README.md >> index.md",
    "premove:gh-pages": "npm run clean:gh-pages",
    "move:gh-pages": "copyfiles _site/**/* ../gh-pages -u 1",
    "prebuild:metadata": "npm run clean:obj",
    "build:metadata": "docfx\\tools\\docfx.exe metadata docfx.json",
    "prebuild:docs": "npm-run-all clean:site move:readme",
    "build:docs": "docfx\\tools\\docfx.exe build docfx.json",
    "build": "npm-run-all build:metadata build:docs",
    "stage": "npm-run-all move:gh-pages",
    "predeploy": "npm-run-all build stage",
    "deploy": "cd ../gh-pages && git add . -A && git commit -m \"Update documentation.\" && git push origin gh-pages",
    "serve:docs": "http-server _site -p 9000",
    "watch:docs": "watch \"npm run build:docs\" \"docs/\" \"obj/docfx/api/\" \"templates/custom/\""
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "copyfiles": "^2.0.0",
    "http-server": "^0.11.1",
    "npm-run-all": "^4.1.3",
    "renamer": "^0.7.3",
    "replace": "^1.0.0",
    "rimraf": "^2.6.2",
    "watch": "^1.0.2"
  },
  "dependencies": {}
}

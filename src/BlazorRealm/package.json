{
  "name": "blazor-realm",
  "version": "0.5.0",
  "description": "Redux state management for Blazor.net.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "release": "standard-version -a -t blazor-realm@",
    "pack": "dotnet pack -o nupkgs/",
    "prepack": "rimraf nupkgs/*",
    "update-nuget-version": "cross-env replace \"(<Version>).*(</Version>)\" \"<Version>$npm_package_version</Version>\" ./BlazorRealm.csproj"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dworthen/BlazorRealm.git"
  },
  "author": "dworthen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dworthen/BlazorRealm/issues"
  },
  "homepage": "https://github.com/dworthen/BlazorRealm#readme",
  "devDependencies": {
    "cross-env": "^5.1.6",
    "replace": "^1.0.0",
    "rimraf": "^2.6.2",
    "standard-version": "^4.4.0"
  },
  "standard-version": {
    "scripts": {
      "postbump": "npm run update-nuget-version && git add ./BlazorRealm.csproj"
    }
  }
}
